# Meeting Transcript Agent Configuration
# Copy this file to .env and fill in your values

# ==================== REQUIRED ====================

# Obsidian Configuration (REQUIRED)
# Absolute path to your Obsidian vault
OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault
# Example: /Users/username/Documents/ObsidianVault
# Example: /home/username/ObsidianVault  
# Example: C:\Users\username\Documents\ObsidianVault

# ==================== RECOMMENDED ====================

# Claude AI Configuration (HIGHLY RECOMMENDED for better task extraction)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Model to use (optional, defaults to claude-3-haiku-20240307)
CLAUDE_MODEL=claude-3-haiku-20240307

# ==================== OPTIONAL ====================

# Obsidian Settings
OBSIDIAN_VAULT_NAME=ObsidianVault  # Used for Obsidian URI links
OBSIDIAN_MEETINGS_FOLDER=Meetings  # Folder for meeting notes

# Task Filtering (Optional)
TASK_ASSIGNEE_FILTER=  # Only show tasks for this person (e.g., "Jim Allen")
TASK_FILTER_MODE=all  # Options: all, mine, team
TASK_MY_NAMES=  # Comma-separated list of your name variations

# Gmail Configuration  
# Note: OAuth credentials are handled by Gmail MCP server in ~/.gmail-mcp/
GMAIL_HOURS_LOOKBACK=120  # How many hours back to search (default: 24) - Recommended: 120 (5 days)
GMAIL_MAX_RESULTS=50  # Max emails per check (default: 50)

# Notification Configuration
# Channels: console, desktop, obsidian, slack
NOTIFICATION_CHANNELS=console,desktop
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXX

# Scheduling
TZ=America/New_York  # Timezone for scheduling
RUN_ON_START=false  # Run immediately on start (default: false)
# Custom cron schedule (overrides default 9AM, 1PM, 5PM)
# Examples: 0 */2 * * * (every 2 hours), */30 * * * * (every 30 minutes)
CUSTOM_SCHEDULE=

# Performance Tuning
BATCH_SIZE=10  # Parallel processing batch size
MAX_QUEUE_SIZE=100  # Max queue size
RETRY_ATTEMPTS=3  # Retry attempts for failures
CLEANUP_TEMP_FILES=true  # Clean temporary files

# Database Settings
DB_CLEANUP_DAYS=90  # Days to keep records
DUPLICATE_THRESHOLD=0.85  # Task similarity threshold (0-1)

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_MAX_FILES=7  # Max log files to keep
LOG_MAX_SIZE=10m  # Max size per log file

# Application Mode
NODE_ENV=development  # development, production, test