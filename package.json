{
  "name": "meeting-transcript-agent",
  "version": "1.0.0",
  "description": "Automated agent that extracts tasks from Gmail meeting transcripts and adds them to Obsidian vault",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc && cp src/database/schema.sql dist/database/",
    "start": "node dist/index.js",
    "start:once": "ts-node src/index.ts --once",
    "start:test": "ts-node src/index.ts --test",
    "dev": "ts-node src/index.ts",
    "daemon": "npm run build && node dist/daemon.js",
    "daemon:headless": "npm run build && node dist/daemon.js --headless",
    "daemon:tui": "npm run build && ./scripts/tui-wrapper.sh",
    "daemon:build": "npm run build && node dist/daemon.js",
    "daemon:install": "./scripts/install-service.sh",
    "daemon:uninstall": "./scripts/uninstall-service.sh",
    "daemon:update": "./scripts/update-service.sh",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "setup:gmail": "ts-node src/scripts/setupGmail.ts",
    "daemon:manual": "npm run build && node dist/daemon.js --manual-only"
  },
  "scripts-info": {
    "_comment": "Documentation for script CLI parameters",
    "daemon": "Start daemon with TUI. Supports: --http-port <port> --gmail-mcp-port <port> --headless --config-dump --help --version",
    "daemon:headless": "Start daemon in background. Supports: --http-port <port> --gmail-mcp-port <port> --config-dump",
    "daemon:examples": [
      "npm run daemon -- --http-port 8080                    # Custom HTTP port",
      "npm run daemon -- --gmail-mcp-port 9000               # Custom Gmail MCP port", 
      "npm run daemon -- --http-port 8080 --gmail-mcp-port 9000  # Both custom ports",
      "npm run daemon:headless -- --http-port 8080           # Headless with custom port",
      "npm run daemon -- --config-dump                       # Show resolved configuration",
      "npm run daemon -- --help                              # Show all options"
    ],
    "port-configuration": {
      "defaults": {
        "http-server": 3002,
        "gmail-mcp": 3000
      },
      "environment-variables": {
        "HTTP_SERVER_PORT": "Alternative to --http-port",
        "GMAIL_MCP_PORT": "Alternative to --gmail-mcp-port"
      },
      "priority": "CLI arguments > Environment variables > Default values",
      "constraints": "Ports must be between 1024-65535 and different for each service"
    }
  },
  "keywords": [
    "gmail",
    "obsidian",
    "meeting",
    "transcript",
    "task-extraction"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.3.0",
    "@types/node-cron": "^3.0.11",
    "@types/pdf-parse": "^1.1.5",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@google-cloud/local-auth": "^3.0.1",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/blessed": "^0.1.25",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node-notifier": "^8.0.5",
    "@types/sqlite3": "^3.1.11",
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "googleapis": "^156.0.0",
    "mammoth": "^1.10.0",
    "mime-types": "^3.0.1",
    "node-cron": "^4.2.1",
    "node-html-parser": "^7.0.1",
    "node-notifier": "^10.0.1",
    "pdf-parse": "^1.1.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0"
  }
}
